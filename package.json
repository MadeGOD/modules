{
  "name": "main",
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter '!./apps/*'",
    "build:apps": "turbo run build --filter '!./packages/*'",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "dev": "turbo run dev",
    "generate": "turbo gen",
    "prepare": "is-ci || husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-angular": "^17.7.0",
    "@commitlint/config-conventional": "^17.7.0",
    "@turbo/gen": "^1.10.15",
    "@types/node": "^18.18.4",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^14.0.1",
    "tsup": "^7.2.0",
    "turbo": "^1.10.15",
    "typescript": "^5.2.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "private": true,
  "packageManager": "bun@1.0.4"
}